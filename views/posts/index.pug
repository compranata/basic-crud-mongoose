        //-   input(type="submit", value="del")
        //-   //- input(type="hidden", name="_method", value="delete")
        //-   input(type="hidden", name="id", value=posts.id)
      p: a(href='/posts/new') @ Add New @
    div.sidebar
      h2(style="color: white;") Search
      form(type="post", action="/posts/search")
        input(type="text", name="keywords", placeholder="(search text)")
        input(type="submit", value="Find")
