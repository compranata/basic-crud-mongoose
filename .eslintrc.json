{
    "extends": ["standard", "eslint:recommended", "plugin:node/recommended"],
    "plugins": ["node"],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "node/no-unsupported-features": ["error", {"version": 10}],
      "indent": ["error", 2],
      "quotes": ["warn", "single"],
      "no-console": "warn",
      "no-var": "error"
    }
}
